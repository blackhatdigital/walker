<h1>My Log Book</h1>
<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th>Distance</th>
      <th>rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.comments %></td>
        <td><%= record.distance %></td>
        <td><%= record.rating %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>