<div class="log_entry_form">
  <%= form_for(@record) do |f| %>
    <% if @record.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h2>

        <ul>
        <% @record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Give your record a title' %><br />
      <%= f.text_area :comments, class: 'form-control', placeholder: 'Tell us about your walk' %>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <div class="input-group">  
           <%= f.text_field :distance, class: 'form-control', placeholder: 'How far was it? eg: 10' %>
           <div class="input-group-addon">km</div>
          </div>
        </div>
        <div class="col-md-6">
        <%= f.select :challenge, options_for_select(["Very easy", "Easy", "On the harder side", "Hard", "Very Hard"]), {include_blank: 'Difficulty Level'}, {required: 'true', class: 'form-control'} %>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Enter Log Entry', :class => 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
